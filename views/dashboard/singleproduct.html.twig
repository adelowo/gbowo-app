{% extends "layouts/dashboard.html.twig" %}

{% block content %}

    <div class="row">

        <div class="col-md-4">
            <img src="/public/uploads/{{ product.image }}" class="img-responsive" alt="{{ product.name }}">
        </div>

        <div class="col-md-8">
            <p class="lead">
                {{ product.description }}
            </p>
            <p>
                Funkatron's image costs {{ product.price | number_format }} Naira only.
            </p>

            <div class="text-center">
                <button type="submit" class="btn btn-lg btn-info">Buy Image</button>
            </div>
        </div>
    </div>
{% endblock %}